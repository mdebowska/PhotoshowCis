{#CRUD tylko dla admina#}
{% extends 'base.html.twig' %}
{% block title %}
    PhotoShow - All tags
{% endblock %}
{% block content %}
    <main>
        <article class="center-blok container">
            <div class="container">
                <header>
                            <h1 class="text-center">{{ 'all_tags'|trans }}</h1>
                </header>
            </div>
            <div class="center-block container">
                {% if is_granted('IS_AUTHENTICATED_FULLY')%}
                    <a href="{{ url('tag_add') }}" class="btn btn-success btn-sm"> {#dla braku paginacji: href="./add"#}
                        <i class="glyphicon glyphicon-plus"></i>
                        {{ 'add'|trans }}
                    </a>
                {% endif %}
                {% if tags is defined and tags|length %}
                    <ul >
                        <div class="container">
                            {% include 'default/_paginator.html.twig' with {
                            paginator: tags,
                            route_name: 'tag_index',
                            } %}
                        </div>
                        {% for row in tags.data %}
                            <li>
                                <div class="row">
                                    <div class="col-md-3">
                                        <a href="{{ url('photo_tag', {'id':row.id}) }}">{{ row.name }}</a>
                                    </div>
                                    {#if admin#}
                                    <div class="col-md-2">
                                        {#<div class="col-md-5 remove-padding">#}

                                            {#<a href="{{ url('profile_edit', {'id':row.id}) }}" class="btn btn-primary btn-xs">#}
                                                {#<i class="glyphicon glyphicon-cog"></i>#}
                                                {#{{ 'edit'|trans }}#}
                                            {#</a>#}
                                        {#</div>#}
                                        <div class="col-md-6 remove-padding">
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') and logged_user['role']=='admin' %}
                                            <a href="{{ url('tag_delete', {'id':row.id}) }}" class="btn btn-danger btn-xs">
                                                <i class="glyphicon glyphicon-trash"></i>
                                                {{ 'delete'|trans }}
                                            </a>
                                        {% endif %}
                                        </div>
                                    </div>
                                </div>
                                {#endif#}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </article>
    </main>
{% endblock %}